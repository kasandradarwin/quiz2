<p style="color: green"><%= notice %></p>

<%= render @idea %>
 <small>By <%= @user %> </small>

<div>
  <%= link_to "Edit this idea", edit_idea_path(@idea) %> |
  <%= link_to "Back to ideas", ideas_path %>

  <%= button_to "Destroy this idea", @idea, method: :delete %>
</div>

<h3>Reviews</h3>

<%= form_with(model:[@idea, @review]) do |f| %>
  <div>
    <br>
    <%= f.text_area :body, cols: 50, rows: 3, placeholder: "Whats on your mind?" %> 
  </div>
  <%= f.submit "Submit", class:"btn btn-outline-primary" %>
  <br>
<% end %>

<br>
<div id="reviews">
  <% @reviews.each do |review| %>
    <%= review.body %>
    <div class="d-flex flex-row">
    <div class="p-2"> <small>reviewed <%= time_ago_in_words(review.created_at)%> ago by <%= review.user.first_name%></small></div>
    <% if current_user == review.user %>
      <div class="p-2"> <%= button_to " â€¢ Delete", idea_review_path(@idea.id, review.id), method: :delete, class: 'btn1' %></div>
    <% end %>
    </div> 
</div>
 
<% end %>
